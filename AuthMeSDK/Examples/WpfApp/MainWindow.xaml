<Window x:Class="AuthMe.Examples.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AuthMe .NET WPF Example" 
        Height="600" 
        Width="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="ðŸ”’ AuthMe .NET WPF Example" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Foreground="#0078D4"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- License Key Input -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" 
                       Text="License Key:" 
                       VerticalAlignment="Center" 
                       FontWeight="SemiBold"
                       Margin="0,0,10,0"/>
            
            <TextBox Grid.Column="1"
                     x:Name="LicenseKeyTextBox"
                     Style="{StaticResource ModernTextBox}"
                     Margin="0,0,10,0" TextChanged="LicenseKeyTextBox_TextChanged"/>
            
            <Button Grid.Column="2"
                    x:Name="ValidateButton"
                    Content="Validate"
                    Style="{StaticResource ModernButton}"
                    Click="ValidateButton_Click"
                    Margin="0,0,10,0"/>
            
            <Button Grid.Column="3" 
                    x:Name="ClearButton"
                    Content="Clear"
                    Style="{StaticResource ModernButton}"
                    Background="#6C757D"
                    Click="ClearButton_Click"/>
        </Grid>

        <!-- Status -->
        <TextBlock Grid.Row="2"
                   x:Name="StatusTextBlock"
                   Text="Ready"
                   Foreground="Blue"
                   FontWeight="SemiBold"
                   Margin="0,0,0,15"/>

        <!-- Hardware Info Button -->
        <Button Grid.Row="3" 
                x:Name="HardwareInfoButton"
                Content="Show Hardware Information"
                Style="{StaticResource ModernButton}"
                Background="#6C757D"
                Click="HardwareInfoButton_Click"
                HorizontalAlignment="Left"
                Margin="0,0,0,15"/>

        <!-- Output -->
        <GroupBox Grid.Row="4" 
                  Header="Validation Output" 
                  Margin="0,0,0,15">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="OutputTextBlock"
                           Text=""
                           FontFamily="Consolas"
                           FontSize="12"
                           Background="Black"
                           Foreground="White"
                           Padding="10"
                           TextWrapping="Wrap"/>
            </ScrollViewer>
        </GroupBox>

        <!-- Protected Content -->
        <Border Grid.Row="5" 
                x:Name="ProtectedContentBorder"
                Background="LightGreen"
                BorderBrush="Green"
                BorderThickness="2"
                CornerRadius="8"
                Padding="20"
                Visibility="Collapsed"
                Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="ðŸŽ‰ Welcome to the Protected Application!" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="DarkGreen"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>
                
                <TextBlock x:Name="LicenseInfoTextBlock"
                           Text=""
                           Foreground="DarkGreen"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- Footer -->
        <TextBlock Grid.Row="6" 
                   Text="AuthMe .NET SDK - Secure License Validation"
                   FontSize="10"
                   Foreground="Gray"
                   HorizontalAlignment="Center"/>
    </Grid>
</Window>
